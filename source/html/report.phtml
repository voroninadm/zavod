{% extends "../templates/layout.twig" %}

{% block page__main %}

<form class="date-form" method="post" action="../php/create_report.php" autocomplete="off">
  <fieldset class="date-form__radio">
    <legend class="date-form__legend">Выберите тип отчета</legend>

    <input class="date-form__input date-form__input--radio visually-hidden" type="radio" name="report_type" id="idle" value="idle">
    <label class="date-form__label" for="idle">Отчет по простоям</label>

    <input class="date-form__input date-form__input--radio date-form__input--radio-master visually-hidden" type="radio" name="report_type" id="master-radio" value="master_choose">
    <label class="date-form__label" for="master-radio"> Отчет смен мастеров</label>

    <input class="date-form__input date-form__input--radio date-form__input--radio-worker visually-hidden" type="radio" name="report_type" id="worker-radio" value="worker_choose">
    <label class="date-form__label" for="worker-radio"> Отчет смен работников</label>

    <input class="date-form__input date-form__input--master" type="text" pattern="^[А-Яа-яЁё]+$" name="master" id="master-input" placeholder="Введите фамилию мастера">
    <label class="date-form__label visually-hidden" for="master-input">Введите мастера смены</label>

    <input class="date-form__input date-form__input--worker" type="text" pattern="^[А-Яа-яЁё]+$" name="worker" id="worker-input" placeholder="Введите фамилию работника">
    <label class="date-form__label visually-hidden" for="worker-input">Введите работника смены</label>

  </fieldset>

  <fieldset class="date-form__main">
    <legend class="date-form__legend">Выберите диапазон для составления отчета</legend>
    <label for="date-from">С
      <input class="date-form__input" type="date" id="date-from" name="date-from" required>
    </label>
    <label for="date-to">По
      <input class="date-form__input" type="date" id="date-to" name="date-to" required>
    </label>
  </fieldset>
  <fieldset class="date-form__buttons">
    <button type="submit">Сформировать отчет</button>
    <button type="reset">Сбросить значения</button>
  </fieldset>
</form>

{% endblock %}
